source "$(dirname "$0")/../mod"

execute() {
    CommandLine.Option.define_pair \
        -s/--style:"Style File"

    var style="`CommandLine.Option.get_value --style`"

    File.has_directory "$1"

    if [ -n "$style" ]; then
        File.has "$style"
        File.walk_with_program "$1" lsgv-to-svg "$style"
    else
        File.walk_with_program "$1" lsgv-to-svg
    fi
}
